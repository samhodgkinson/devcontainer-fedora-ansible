// Place your settings in this file to overwrite the default settings
{
    "editor.fontSize": 15,
    "editor.fontFamily": "Consolas",
    "editor.tabSize": 2,
    "editor.wordWrapColumn": 80,
    "editor.fontLigatures": true,
    "editor.snippetSuggestions": "top",
    "editor.minimap.enabled": true,
    "files.exclude": {
      "**/.git": true,
      "**/.vscode": false,
    },
    "search.exclude": {
      "**/.git": true,
    },
    "files.trimTrailingWhitespace": true,
    "html.suggest.html5": true,
    "stylelint.enable": true,
    "window.zoomLevel": 0,
    "javascript.validate.enable": false,
    "extensions.autoUpdate": true,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "Consolas",
    "terminal.integrated.cursorStyle": "line",
    "workbench.welcome.enabled": false,
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.showUpdateMessage": false,
    "sync.host": "",
    "sync.pathPrefix": "",
    "eslint.autoFixOnSave": true,
    "editor.formatOnSave": false,
    "flow.useNPMPackagedFlow": true,
    "prettier.singleQuote": true,
    "prettier.printWidth": 80,
    "prettier.trailingComma": "all",
    "prettier.semi": true,
    "prettier.useTabs": false,
    "prettier.bracketSpacing": true,
    "sync.quietSync": false,
    "workbench.colorTheme": "Tomorrow Night Blue",
    "editor.guides.indentation": true,
    "workbench.colorCustomizations": {
      "activityBar.activeBackground": "#bd930b",
      "activityBar.background": "#bd930b",
      "activityBar.foreground": "#15202b",
      "activityBar.inactiveForeground": "#15202b99",
      "activityBarBadge.background": "#eedad0",
      "activityBarBadge.foreground": "#15202b",
      "commandCenter.border": "#e7e7e799",
      "sash.hoverBorder": "#a38bd5",
      "statusBar.background": "#bd930b",
      "statusBar.foreground": "#e7e7e7",
      "statusBarItem.hoverBackground": "#bd930b",
      "statusBarItem.remoteBackground": "#bd930b",
      "statusBarItem.remoteForeground": "#e7e7e7",
      "titleBar.activeBackground": "#bd930b",
      "titleBar.activeForeground": "#e7e7e7",
      "titleBar.inactiveBackground": "#bd930b",
      "titleBar.inactiveForeground": "#e7e7e799"
    }
  }